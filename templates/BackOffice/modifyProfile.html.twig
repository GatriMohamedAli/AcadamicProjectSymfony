{% extends 'BackOffice/baseAdmin.html.twig' %}
{% block body %}
    <div style="height: 70vh; width: 100%; padding: 50px">


        {{ form_start(form) }}
        <div class="form-group">
            <label>Username</label>
            {{ form_widget(form.username,{'attr': {'placeholder':'Username.','class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <label>Email</label>
            {{ form_widget(form.email,{'attr': {'placeholder':'Entre your email here.','class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <label>Profile Picture</label>
            {{ form_widget(form.imageFile,{'attr': {'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <label >Phone</label>
            {{ form_widget(form.Telephone,{'attr': {'placeholder':'Enter your phone here.','class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <label >Address</label>
            {{ form_widget(form.address,{'attr': {'placeholder':'Enter your address here.','class':'form-control'}}) }}
        </div>

        <button style="float: right; margin: 20px" type="submit" class="btn btn-primary">Submit</button>
        {{ form_end(form) }}


    </div>
{% endblock %}