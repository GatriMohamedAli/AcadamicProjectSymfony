{% extends 'FrontOffice/baseUser.html.twig' %}
{% block body %}

    <div class="page-content p-5" id="content">
        <div>
            <div style="position: absolute;right: 10px;top: 20px ;margin-right: 30px;">
                <img src="" alt="" style="margin-top: -10px;height: 100px;">
            </div>
            <h1>Profile</h1>

            <hr>
        </div>
        <div class="container">
            <div class="row gutters" >
                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12"  >
                    <div class="card h-100" >
                        <div class="card-body" style="box-shadow: 5px 5px 15px 5px rgba(0,0,0,0.2);">
                            <div class="account-settings">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        {% if user.image %}
                                            <img style="height: 100px;width: 100px;border-radius: 50%;object-fit: cover;" src='{{ asset('uploads/images/profiles/'~ app.user.image) }}' width="65" class="mr-3 rounded-circle img-thumbnail ">

                                        {% else %}
                                            <img src="https://img.icons8.com/officel/100/000000/user.png"/>
                                        {%endif%}
                                        <div class="mt-3">
                                            <h4 style="text-transform: capitalize;">{{ user.username }}</h4>
                                            <p class="text-secondary mb-1">
                                                {% if user.roles[0]=="ROLE_USER" %}
                                                    Simple User
                                                {% else %}
                                                    Admin
                                                {% endif %}
                                            </p>
                                            <a  href="{{ path('modify_profile') }}" class="btn btn-outline-primary" href="">Modifier</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">
                        <div class="card-body" style="box-shadow: 5px 5px 15px 5px rgba(0,0,0,0.2);">
                            <div class="row">
                                <div class="card-body">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <h6 class="mb-3 text-primary">Info personnelle</h6>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Nom et pr√©nom</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ user.username }}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ user.email }}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Telephone</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {% if user.Telephone %}
                                            {{ user.Telephone }}
                                            {% else %}
                                            Empty
                                            {% endif %}

                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Adresse</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {% if user.address %}
                                                {{ user.address }}
                                            {% else %}
                                                Empty
                                            {% endif %}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Is Verified ? </h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {% if user.isVerified %}
                                            Yes
                                            {% else %}
                                            No
                                            {% endif %}
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}