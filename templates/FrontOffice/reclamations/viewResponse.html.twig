{% extends 'FrontOffice/index.html.twig' %}
{% block body %}
    <table class="table" style="height: 80vh">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Solution</th>
            <th scope="col">Problem</th>

        </tr>
        </thead>
        <tbody>
        {% for response in listResponses %}
            <tr>
                <th scope="row">{{ response.id }}</th>

                <td>{{ response.solution }}</td>
                <td>{% for rec in response.reclamation %}
                        {{ rec.title }}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}